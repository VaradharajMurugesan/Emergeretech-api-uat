<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="false"
      internalLogLevel="Error" internalLogFile="${basedir}/InternalLogs/nlog-internal.log">

	<targets>
		<target name="logfile" xsi:type="File"
			  layout="${longdate}|${level}|${logger}|${message} ${exception:format=tostring:maxInnerExceptionLevel=5}"
			  fileName="${basedir}/Log/EmergereJobCareer_api_log.txt"
			  archiveEvery="Day"
			  archiveFileName="${basedir}/Log/Logs-Archive/EmergereJobCareer_api_log_{#}.txt"
			  archiveAboveSize="5000000"
			  archiveDateFormat="yyyy-MM-dd"
			  replaceFileContentsOnEachWrite="false"
			  deleteOldFileOnStartup="false"
			  archiveNumbering="DateAndSequence"
			  maxArchiveDays="60" />
	</targets>

	<rules>
		<logger name="*" minlevel="Debug" writeTo="logfile" />
	</rules>
</nlog>